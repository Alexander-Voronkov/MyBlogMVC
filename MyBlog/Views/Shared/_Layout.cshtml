@using MyBlog.Authorization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBlog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyBlog.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyBlog</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <vc:categories />
                    </ul>

                    @{
                        var userClaims = User.Claims;
                        string highestClaim = "";

                        if (userClaims.FirstOrDefault(c => c.Type == MyClaims.SuperAdmin)?.Type == MyClaims.SuperAdmin)
                        {
                            highestClaim = MyClaims.SuperAdmin;
                        }
                        else if (userClaims.FirstOrDefault(c => c.Type == MyClaims.Admin)?.Type == MyClaims.Admin)
                        {
                            highestClaim = MyClaims.Admin;
                        }
                        else if (userClaims.FirstOrDefault(c => c.Type == MyClaims.PostsWriter)?.Type == MyClaims.PostsWriter)
                        {
                            highestClaim = MyClaims.PostsWriter;
                        }
                        else
                        {
                            highestClaim = "Has no Claims";
                        }
                    }

                    <ul class="navbar-nav">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            @if (User.HasClaim(MyClaims.SuperAdmin, MyClaims.SuperAdmin))
                            {
                                <li class="nav-item bg-light rounded rounded-1 me-3"></li>
                                <a asp-action="Index"
                                   asp-controller="SuperAdmin"
                                   class="nav-link btn btn-outline-primary">
                                   Super Admin Panel
                                </a>
                            }

                            <li class="nav-item bg-light rounded rounded-1">
                                <div class="nav-link text-primary">
                                    @User.Identity.Name - @highestClaim
                                </div>
                            </li>
                            <li class="nav-item">
                                <div class="nav-link">
                                    <form method="post"
                                          asp-action="Logout"
                                          asp-controller="Account">
                                        <input type="submit"
                                               value="Logout"
                                               class="btn btn-outline-secondary"/>
                                    </form>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item bg-light rounded rounded-1 me-3">
                                <a  asp-action="Login"
                                    asp-controller="Account"
                                    class="nav-link text-primary btn btn-outline-light">
                                    Log In
                                </a>
                            </li>
                            <li class="nav-item bg-light rounded rounded-1">
                                <a asp-action="Register"
                                   asp-controller="Account"
                                   class="nav-link text-primary btn btn-outline-light">
                                    Registration
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MyBlog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
