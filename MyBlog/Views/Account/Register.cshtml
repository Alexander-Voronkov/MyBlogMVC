@model MyBlog.Models.ViewModels.RegisterVM

<h2>Registration</h2>

<form method="post"
      asp-action="Register"
      asp-controller="Account">

      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" placeholder="@nameof(Model.Email)">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Password" class="form-control" placeholder="@nameof(Model.Password)">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="ConfirmPassword" class="form-control" placeholder="@nameof(Model.ConfirmPassword)">
        <label asp-for="ConfirmPassword"></label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input type="submit" value="Registration" class="btn btn-success" />
    </div>
</form>